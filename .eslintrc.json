{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsdoc/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jsdoc"
  ],
  "globals": {
    "tf": "readonly",
    "cocoSsd": "readonly",
    "cv": "readonly",
    "AppConstants": "readonly",
    "Utils": "readonly",
    "UIHelpers": "readonly",
    "GPSManager": "readonly",
    "DatabaseManager": "readonly",
    "AIRecognitionManager": "readonly",
    "FaceDetectionManager": "readonly",
    "PoseEstimationManager": "readonly",
    "DepthPredictionManager": "readonly"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "prefer-const": "warn",
    "no-var": "warn",
    "jsdoc/require-jsdoc": ["warn", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }],
    "jsdoc/require-param": "warn",
    "jsdoc/require-param-description": "warn",
    "jsdoc/require-returns": "warn",
    "jsdoc/require-returns-description": "warn",
    "jsdoc/check-types": "warn"
  }
}

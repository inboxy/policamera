{
  "name": "policamera",
  "version": "2.1.0",
  "description": "Progressive Web App for professional camera with AI detection, GPS tracking, OCR, barcode/QR scanning, and edge-based depth estimation",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "scripts": {
    "dev": "python -m http.server 8000",
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "cp *.html *.css *.json manifest.json dist/ 2>/dev/null || true",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "format": "prettier --write \"**/*.{js,ts,json,md,css,html}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "pwa",
    "camera",
    "gps",
    "ai",
    "ocr",
    "barcode",
    "qr-code",
    "tesseract",
    "object-detection",
    "depth-estimation",
    "tensorflow",
    "edge-detection",
    "typescript"
  ],
  "author": "PoliCamera Team",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs": "^4.20.0",
    "@tensorflow/tfjs-backend-webgl": "^4.20.0",
    "@zxing/library": "^0.20.0",
    "jsqr": "^1.4.0",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inboxy/policamera.git"
  },
  "bugs": {
    "url": "https://github.com/inboxy/policamera/issues"
  },
  "homepage": "https://github.com/inboxy/policamera#readme"
}
